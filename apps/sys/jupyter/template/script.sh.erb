#!/usr/bin/env bash

# Benchmark info
echo "TIMING - Starting main script at: $(date)"

# Set working directory to home directory
<%- if context.working_dir.blank? -%>
  cd "${HOME}"
<%- else -%>
  cd <%= context.working_dir %>
<%- end -%>
pwd

#
# Start Jupyter Notebook Server
#

# Benchmark info
echo "TIMING - Starting jupyter at: $(date)"

<%- if context.software.include?("module") -%>
 <%- unless context.modules.blank? -%>
# Purge the module environment to avoid conflicts
module purge

# Load anaconda
#source /etc/profile.d/z00-lmod.sh
#module load anaconda3/2023.09-0-yjzjr4h
module load Anaconda3

# List loaded modules
module list
 <%- end -%>
# Launch the Jupyter Notebook Server
 set -x
 jupyter lab --config="${CONFIG_FILE}" <%= context.extra_jupyter_args %>
<%- else -%>
# Launch the Jupyter Notebook Server
 
  set -ux
  <% if context.is_gpu == 'yes' %>
	  singularity exec --nv -H '<%= context.working_dir %>'  -B $HOME -B /home/bbg -B /home/mmb -B /aloy -B /home/sbnb -B /scratch  -B /data:/data -B /apps:/apps <%= context.container_value %> jupyter lab --config="${CONFIG_FILE}" <%= context.extra_jupyter_args %>
  <%- else -%> 
	  singularity exec -H '<%= context.working_dir %>'  -B $HOME -B /home/bbg -B /home/mmb -B /aloy -B /home/sbnb -B /scratch  -B /data:/data -B /apps:/apps <%= context.container_value %> jupyter lab --config="${CONFIG_FILE}" <%= context.extra_jupyter_args %>
  <% end %>  

<%- end -%>

